<ul class="centered-list small-text puzzle-list">
<% puzzles.each do |puzzle| %>
  <li>
  <a href="<%= url_for(:puzzles, :show, :slug => puzzle.slug) %>"><%= puzzle.title %>
  <div class="meta-data" style="float: right;">
    <% if puzzle.num_likes > 0 %>
    <span><span class="colored-number"><%= puzzle.num_likes %></span> likes</span>
    <% end %>
    <% if puzzle.num_comments > 0 %>
    <span><span class="colored-number"><%= puzzle.num_comments %></span> comments</span>
    <% end %>
  </div>
</a>
  </li>
<% end %>
</ul>
