<div class="row-fluid">
<div class="span12">
	<form action="/search" method="get" class="big-search">
		<input type="text" name="q" placeholder="Search..." value="<%= @q %>" />
	</form>

	<% if @q.length != 0 %>
		<h3>Search results for "<%= h @q %>"</h3>
	<% else %>
		<h3>All puzzles</h3>
	<% end %>

	<% if @puzzles.length > 0 %>
	<p>
		<%= erb :"partials/list_puzzles" %>
	</p>
	<% else %>
	<p>
	No puzzles found.
	</p>
	<% end %>
</div>
</div>
