<div class="row-fluid">
<div class="span12">
  <form action="/search" method="get" class="big-search">
    <input type="text" name="q" placeholder="Search..." value="<%= @q %>" />
  </form>

  <h3>Search results
    <% if not @q.empty? %>
      for "<%= h @q %>"
    <% end %>
  </h3>

  <% if @puzzles.length > 0 %>
    <%= erb :"partials/list_puzzles", :locals => {:puzzles => @puzzles} %>
  <% else %>
  <p>
  No puzzles found.
  </p>
  <% end %>
</div>
</div>
