<div class="row">
<div class="span4">

<h2>Search results</h2>

<p>For "<%= @q %>"</p>

<% if @puzzles.length > 0 %>
<ul>
<% @puzzles.each do |puzzle| %>
	<li><a href="<%= path_to_puzzle puzzle %>"><%= puzzle.title %></a></li>
<% end %>
</ul>
<% else %>
<p>
No puzzles found.
</p>
<% end %>

</div>
</div>
